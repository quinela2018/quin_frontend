  <div class="form-group">
    <label id='identification' for="identification">Login</label>
    {{input value=identification placeholder='Enter Login' class='form-control'}}
  </div>
  <div class="form-group">
    <label id='password' for="password">Password</label>
    {{input value=password placeholder='Enter Password' class='form-control' type='password'}}
  </div>
  <button {{action onLogin identification password}} class="btn btn-default">Login</button>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}
