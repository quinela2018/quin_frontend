{{#if showRegister}}
  {{#modal-dialog onClose=(action (mut showRegister) false) translucentOverlay=true targetAttachment="center" clickOutsideToClose=false containerClassNames="modal-lg" }}
    <div class="modal-header">
      <h5 class="modal-title">Registro</h5>
    </div>
    <div class="modal-body">
      <form {{action (action onRegister user passwordConfirmation) on="submit"}}>
        <div class="form-group">
          <label for="firstName">Nombre</label>
          {{input id="firstName" required=true type='text' value=user.firstName class='form-control'}}
        </div>
        <div class="form-group">
          <label for="lastName">Apellidos</label>
          {{input id="lastName" required=true type='text' value=user.lastName class='form-control'}}
        </div>
        <div class="form-group">
          <label for="email">Correo</label>
          {{input id="email" required=true type='email' value=user.email class='form-control'}}
        </div>
        <div class="form-group">
          <label for="phone">Teléfono</label>
          <input id="phone" required=true type="text" value={{user.formattedPhone}} class='form-control' oninput={{action 'updatePhone' value='target.value'}}/>
        </div>
        <div class="form-group">
          <label for="password">Contraseña</label>
          {{input id="password" required=true type='password' value=user.password class='form-control'}}
        </div>
        <div class="form-group">
          <label for="passwordConfirmation">Confirmar Contraseña</label>
          {{input id="passwordConfirmation" required=true type='password' value=passwordConfirmation class='form-control'}}
        </div>
      <div class="modal-footer">
        <button onclick= {{action (mut showRegister) false}} class="btn btn-secondary">Cerrar</button>
        <button type="submit" class="btn btn-primary">Registrarse</button>
      </div>
    </form>
</div>
  {{/modal-dialog}}
{{/if}}
