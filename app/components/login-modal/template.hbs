{{#if showLogin}}
    {{#modal-dialog
      onClose=(action (mut showLogin) false)
      translucentOverlay=true
      targetAttachment="center"
      clickOutsideToClose=false}}
            <div class="modal-header">
              <h5 class="modal-title">Ingreso</h5>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label id='identification' for="identification">Login</label>
                {{input value=identification placeholder='Email' type="email" class='form-control'}}
              </div>
              <div class="form-group">
                <label id='password' for="password">Password</label>
                {{input value=password placeholder='Password' type="password" class='form-control' type='password'}}
              </div>
            </div>
            <div class="modal-footer">
              <button onclick={{action (mut showLogin) false}} class="btn btn-secondary">Cerrar</button>
              <button onclick="="{{action (action onLogin identification password)}} class="btn btn-primary">Login</button>
            </div>
    {{/modal-dialog}}
  {{/if}}
